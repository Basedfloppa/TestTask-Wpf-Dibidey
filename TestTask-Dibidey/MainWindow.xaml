<Window x:Class="TestTask_Dibidey.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <Grid Margin="10">
        <DataGrid ItemsSource="{Binding Abonents}" AutoGenerateColumns="True" Margin="0,0,100,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <StackPanel HorizontalAlignment="Right">
            <Button x:Name="search_button" Content="Search" Width="100" Height="40" Click="search_button_Click"/>
            <Button x:Name="download_csv_button" Content="Download CSV" Width="100" Height="40" Click="download_csv_button_Click" />
            <Button x:Name="streets_button" Content="Streets" Width="100" Height="40" Click="streets_button_Click" />
        </StackPanel>
        
    </Grid>
</Window>
